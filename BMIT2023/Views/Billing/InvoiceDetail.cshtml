@{
    ViewData["Title"] = "Invoice Detail";
}

@model Invoice

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Invoice Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>@Model.InvoiceNumber</h5>
                            <p class="text-muted">Invoice Date: @Model.InvoiceDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        <div class="col-md-6 text-right">
                            <span class="badge badge-@GetStatusBadgeClass(Model.Status)" style="font-size: 16px;">@Model.Status</span>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Bill To:</h6>
                            <p>
                                <strong>@Model.StudentBillingProfile?.Student?.FullName</strong><br />
                                @Model.StudentBillingProfile?.Student?.Email<br />
                                @Model.StudentBillingProfile?.BillingAddress
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>Payment Details:</h6>
                            <p>
                                <strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")<br />
                                <strong>Fee Type:</strong> @Model.FeeStructure?.FeeType<br />
                                <strong>Description:</strong> @Model.FeeStructure?.Description
                            </p>
                        </div>
                    </div>

                    <hr />

                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.FeeStructure?.FeeType - @Model.Description</td>
                                <td class="text-right">$@Model.Amount.ToString("F2")</td>
                            </tr>
                            @if (Model.LineItems != null && Model.LineItems.Any())
                            {
                                @foreach (var item in Model.LineItems)
                                {
                                    <tr>
                                        <td>@item.ItemDescription</td>
                                        <td class="text-right">$@item.LineTotal.ToString("F2")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="row mt-4">
                        <div class="col-md-6 offset-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Subtotal:</strong></td>
                                    <td class="text-right">$@Model.Amount.ToString("F2")</td>
                                </tr>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td><strong>Discount:</strong></td>
                                        <td class="text-right">-$@Model.DiscountAmount.ToString("F2")</td>
                                    </tr>
                                }
                                @if (Model.TaxAmount > 0)
                                {
                                    <tr>
                                        <td><strong>Tax:</strong></td>
                                        <td class="text-right">$@Model.TaxAmount.ToString("F2")</td>
                                    </tr>
                                }
                                <tr class="table-active">
                                    <td><strong>Total Amount:</strong></td>
                                    <td class="text-right"><strong>$@Model.TotalAmount.ToString("F2")</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Amount Paid:</strong></td>
                                    <td class="text-right">$@Model.AmountPaid.ToString("F2")</td>
                                </tr>
                                <tr class="table-danger">
                                    <td><strong>Amount Due:</strong></td>
                                    <td class="text-right"><strong>$@Model.AmountDue.ToString("F2")</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="alert alert-info mt-4">
                            <strong>Notes:</strong><br />
                            @Model.Notes
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>Payments</h5>
                </div>
                <div class="card-body">
                    @if (Model.Payments != null && Model.Payments.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments.OrderByDescending(x => x.PaymentDate))
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                                        <td>$@payment.Amount.ToString("F2")</td>
                                        <td><span class="badge badge-success">@payment.Status</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No payments recorded.</p>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    @if (Model.AmountDue > 0)
                    {
                        <a href="/Billing/MakePayment" class="btn btn-success btn-block mb-2">Pay Now</a>
                    }
                    <a href="/Billing/Invoices" class="btn btn-secondary btn-block">Back to Invoices</a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "success",
            "Overdue" => "danger",
            "PartiallyPaid" => "warning",
            "Pending" => "info",
            "Cancelled" => "secondary",
            _ => "secondary"
        };
    }
}

<style>
    .btn-block {
        display: block;
        width: 100%;
    }
</style>
