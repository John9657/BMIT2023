@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container py-4">

    <div class="hero-section text-center text-md-start d-flex flex-column flex-md-row align-items-center justify-content-between">
        <div>
            <h1 class="display-5 fw-bold">Welcome back, Student!</h1>
            <p class="lead mb-0">Track your progress and check out our latest courses.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <button class="btn btn-light fw-bold px-4 py-2">View My Schedule</button>
        </div>
    </div>

    <div class="row mt-4">

        <div class="col-lg-8 mb-4">
            <h3 class="mb-3">Featured Courses</h3>

            <div id="coursesCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000"> <div class="carousel-indicators">
                    <button type="button" data-bs-target="#coursesCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#coursesCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#coursesCarousel" data-bs-slide-to="2"></button>
                </div>

                <div class="carousel-inner rounded-3 shadow-sm">

                    <div class="carousel-item active course-carousel-item">
                        <img src="~/images/math.jpg" class="course-carousel-img" alt="Math Course">
                        <div class="course-carousel-caption">
                            <h5>Advanced Mathematics</h5>
                            <p>Master Calculus and Algebra with our top-rated instructors.</p>
                        </div>
                    </div>

                    <div class="carousel-item course-carousel-item">
                        <img src="~/images/chemistry.jpg" class="course-carousel-img" alt="Chemistry Course">
                        <div class="course-carousel-caption">
                            <h5>Physics & Chemistry Lab</h5>
                            <p>Hands-on experiments and intensive theory preparation.</p>
                        </div>
                    </div>

                    <div class="carousel-item course-carousel-item">
                        <img src="~/images/english.jpg" class="course-carousel-img" alt="English Course">
                        <div class="course-carousel-caption">
                            <h5>English Literature</h5>
                            <p>Improve your writing and comprehension skills today.</p>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#coursesCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#coursesCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-lg-4">
            <h3 class="mb-3">Notice Board</h3>
            <div class="card info-card p-3">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Holiday Notice</strong>
                            <div class="text-muted small">Center closed on Friday</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">New</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Exam Schedule</strong>
                            <div class="text-muted small">Finals start next week</div>
                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Fee Reminder</strong>
                            <div class="text-muted small">Monthly dues pending</div>
                        </div>
                        <span class="badge bg-warning text-dark rounded-pill">!</span>
                    </li>
                </ul>
                <div class="mt-3 text-center">
                    <a href="#" class="btn btn-outline-primary btn-sm w-100">View All Notices</a>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3 mt-4">Essential Details</h3>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card info-card p-4 text-center">
                <div class="card-icon">📚</div> <h5>My Classes</h5>
                <p class="text-muted">View your active enrollments and timings.</p>
                <a href="#" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card info-card p-4 text-center">
                <div class="card-icon">📊</div>
                <h5>Exam Results</h5>
                <p class="text-muted">Check your latest grades and performance.</p>
                <a href="#" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card info-card p-4 text-center">
                <div class="card-icon">📞</div>
                <h5>Contact Support</h5>
                <p class="text-muted">Need help? Get in touch with administration.</p>
                <a href="#" class="stretched-link"></a>
            </div>
        </div>
    </div>

</div>